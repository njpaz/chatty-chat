.row
  .col-md-6.col-md-offset-3
    = form_for @room, html: { class: "form-horizontal" } do |f|
      %fieldset
        %legend New Chat
        .form-group
          .col-md-12= f.label :name, class: "control-label"
          .col-md-12= f.text_field :name, placeholder: "What's the chat name?", class: "form-control"
        .form-group
          .col-md-12= f.submit  class: "btn btn-primary"
